<div class="overlay">
	<div class="login-page">
		<div class="form">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
	    			<%= f.email_field :email, autofocus: true, placeholder: "Email" %>
	    			<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

	  			<div class="actions">
	    				<%= f.submit "Log in" %>
	  			</div>
			<% end %>

			<%= render "devise/shared/links" %>

		</div>
	</div>
</div>
